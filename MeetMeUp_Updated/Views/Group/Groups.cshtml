@model IEnumerable<MeetMeUp_Updated.Models.Group>
@{
    ViewBag.Title = "Groups";
}

<div class="container-fluid image-margin">
    <h1 class="m-4">My groups</h1>
    <hr />

    @using (Html.BeginForm("Groups", "Group", FormMethod.Get))
    {
        <div class="group mb-3">
            @Html.TextBox("query", null, new { @class = "form-control mr-sm-2 w-25 d-inline" })
            <input type="submit" class="btn btn-primary btn-rounded btn-md my-0 d-inline" value="Search" />
        </div>
    }

    <div class="list-group">

        @foreach (var group in Model)
        {
            <a href=@Url.Action("Details","Group", new { id = group.GroupID}) class="list-group-item list-group-item-action">
                <div class="group">
                    <img class="rounded-circle mr-3" src=@group.GroupImage
                         alt="groupImage" width="100px" height="100px">
                    <h4 class="ml-4 mr-4">@group.GroupName</h4>
                    <ul class="group-members">
                        @foreach (var member in group.Members)
                        {
                            <li>@member.UserName</li>
                        }
                    </ul>
                </div>
            </a>
        }
    </div>
    @Html.ActionLink("Create new group", "Create", "Group", new { @class = "btn btn-primary btn-lg m-4" })
</div>

